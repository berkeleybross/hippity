{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install NPM packages",
      "group": "build",
      "type": "npm",
      "script": "install",
      "problemMatcher": []
    },
    {
      "label": "Dev",
      "group": "build",
      "type": "npm",
      "script": "dev",
      "problemMatcher": [],
      "dependsOn": "Commit test"
    },
    {
      "label": "Commit test",
      "group": "build",
      "type": "npm",
      "script": "build",
      "problemMatcher": ["$eslint-stylish", "$tsc"]
    },
    {
      "label": "Lint es",
      "group": "build",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint:es"],
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Run tests",
      "group": "build",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test"],
      "problemMatcher": []
    },
    {
      "label": "Sort",
      "group": "build",
      "type": "npm",
      "script": "sort",
      "problemMatcher": []
    },
    {
      "label": "Watch tests",
      "group": "build",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test", "--", "--watch"],
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}
