{
  "name": "hippity",
  "version": "0.1.0",
  "description": "Extensible HTTP client",
  "keywords": [
    "ajax",
    "http",
    "node",
    "promise",
    "xhr"
  ],
  "homepage": "https://github.com/berkeleybross/hippity#readme",
  "bugs": {
    "url": "https://github.com/berkeleybross/hippity/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/berkeleybross/hippity.git"
  },
  "license": "MIT",
  "author": "berkeleybross",
  "main": "dist/hippity.umd.js",
  "module": "dist/hippity.es5.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production npm-run-all clean -p build:* lint:* --aggregate-output",
    "build:rollup": "rollup -c rollup.config.js",
    "clean": "rimraf dist coverage",
    "format": "run-s format:*",
    "format:es": "eslint --fix",
    "format:prettier": "prettier --write .",
    "lint": "run-p lint:*",
    "lint:es": "eslint ./src ./tests",
    "lint:prettier": "prettier --check .",
    "lint:types": "tsc --noEmit",
    "start": "babel-watch -e .ts server.ts",
    "sort": "npx sort-package-json",
    "test": "run-p start \"test:run -- --coverage\" --race",
    "test-watch": "run-s \"test:run -- --watch\"",
    "test:jest": "cross-env NODE_ENV=test jest",
    "test:run": "run-s test:wait \"test:jest -- {@}\" --",
    "test:wait": "wait-on http://localhost:3000/heartbeat -t 5000",
    "upgrade": "npx npm-check --update",
    "why": "npx npm-why"
  },
  "babel": {
    "plugins": [
      [
        "babel-plugin-transform-async-to-promises",
        {
          "inlineHelpers": true
        }
      ],
      [
        "babel-plugin-root-import",
        {
          "rootPathPrefix": "~",
          "rootPathSuffix": "src"
        }
      ]
    ],
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "browsers": "defaults, maintained node versions"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/\\.test\\.js$/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 55,
        "functions": 68,
        "lines": 66,
        "statements": 66
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/src/$1"
    },
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "testEnvironment": "node",
    "testRegex": "/(src|tests)/.*\\.(test|spec)\\.(ts|tsx|js)$"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/node": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
    "@koa/router": "^10.0.0",
    "@types/jest": "^26.0.20",
    "@types/koa": "^2.13.1",
    "@types/node": "^14.14.33",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "babel-plugin-root-import": "^6.6.0",
    "babel-plugin-transform-async-to-promises": "^0.8.15",
    "babel-watch": "^7.4.1",
    "browser-or-node": "^1.3.0",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "is-buffer": "^2.0.5",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "koa": "^2.13.1",
    "koa-body": "^4.2.0",
    "koa-ejs": "^4.3.0",
    "koa-mount": "^4.0.0",
    "koa-static": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.41.1",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "typescript": "^4.2.3",
    "wait-on": "^5.2.1"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
