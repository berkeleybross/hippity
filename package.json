{
  "name": "@berkeleybross/restclient",
  "version": "0.4.0",
  "description": "Simple middleware based REST client",
  "homepage": "https://github.com/berkeleybross/restclient.js#readme",
  "bugs": {
    "url": "https://github.com/berkeleybross/restclient.js/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/berkeleybross/restclient.js.git"
  },
  "license": "MIT",
  "author": "berkeleybross",
  "files": [
    "dist"
  ],
  "main": "dist/@berkeleybross/restclient.umd.js",
  "module": "dist/@berkeleybross/restclient.es5.js",
  "typings": "dist/types/restclient.d.ts",
  "scripts": {
    "build": "cross-env NODE_ENV=production npm-run-all clean -p build:prod lint test --aggregate-output",
    "build:prod": "npm-run-all -s build:prod:*",
    "build:prod:rollup": "rollup -c rollup.config.ts",
    "build:prod:ts": "tsc --module commonjs --emitDeclarationOnly",
    "clean": "rimraf dist coverage",
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts'",
    "sort": "npx sort-package-json",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "upgrade": "npx npm-check --update"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/.test.ts$/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 10,
        "lines": 10,
        "statements": 10
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/$1"
    },
    "testEnvironment": "node",
    "testRegex": "(/src/.*\\.(test|spec))\\.(ts|tsx|js)$",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    }
  },
  "dependencies": {
    "axios": "^0.19.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.2",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "jest": "^24.9.0",
    "jest-config": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.14.3",
    "rimraf": "^3.0.0",
    "rollup": "^1.20.0",
    "rollup-plugin-commonjs": "^10.0.2",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.22.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.0.3"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
