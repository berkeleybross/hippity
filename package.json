{
  "name": "@berkeleybross/restclient",
  "version": "0.4.0",
  "description": "Simple middleware based REST client",
  "homepage": "https://github.com/berkeleybross/restclient.js#readme",
  "bugs": {
    "url": "https://github.com/berkeleybross/restclient.js/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/berkeleybross/restclient.js.git"
  },
  "license": "MIT",
  "author": "berkeleybross",
  "files": [
    "dist"
  ],
  "main": "dist/restclient.umd.js",
  "module": "dist/restclient.es5.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production npm-run-all clean -p build:* lint:* test --aggregate-output",
    "build:rollup": "rollup -c rollup.config.js",
    "clean": "rimraf dist coverage",
    "lint:es": "eslint ./src",
    "sort": "npx sort-package-json",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "upgrade": "npx npm-check --update"
  },
  "babel": {
    "plugins": [
      [
        "babel-plugin-root-import",
        {
          "rootPathPrefix": "~",
          "rootPathSuffix": "src"
        }
      ]
    ],
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage",
          "corejs": 3
        }
      ]
    ]
  },
  "browserslist": [
    "defaults, maintained node versions"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/.test.js$/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 10,
        "lines": 10,
        "statements": 10
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/src/$1"
    },
    "testEnvironment": "node",
    "testRegex": "(/src/.*\\.(test|spec))\\.(ts|tsx|js)$"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "core-js": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.2",
    "babel-plugin-root-import": "^6.4.1",
    "coveralls": "^3.0.6",
    "cross-env": "^5.2.0",
    "eslint": "^6.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "jest": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "rollup": "^1.20.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.4.2"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
